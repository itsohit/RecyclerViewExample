<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/largePadding">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_sharedPre_et"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/edittext_background"
        android:textSize="@dimen/normaltvSize"
        android:padding="@dimen/editText_padding"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:hint="Name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_id_sharedPre_et"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/edittext_background"
        android:textSize="@dimen/normaltvSize"
        android:padding="@dimen/editText_padding"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:hint="Email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_sharedPre_et"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/edittext_background"
        android:textSize="@dimen/normaltvSize"
        android:padding="@dimen/editText_padding"
        android:inputType="number"
        android:singleLine="true"
        android:hint="Mobile number"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Save"
            android:layout_weight="1"
            android:id="@+id/save_btn"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Clean"
            android:layout_weight="1"
            android:id="@+id/clean_btn"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Data from getSharedPreference()"
        android:textAllCaps="false"
        android:id="@+id/getData_fragment_btn"/>

</LinearLayout>
